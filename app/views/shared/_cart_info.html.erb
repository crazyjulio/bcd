<div>
  <div class="cart-details d-inline-block pr-3">
    <i class="fa fa-shopping-cart pr-1"></i>
    <% if cart %>
      <%= link_to "#{pluralize(cart.total_quantity,'Item')} in Cart", cart_path %>
      &nbsp;
      <%= number_to_currency cart.total_price %>
    <% else %>
      0 Items in Cart &nbsp; $0.00
    <% end %>
  </div>
  <div class="d-inline-block">
    <% if (user_signed_in? && !current_user.guest?) || radmin_signed_in? %>
      <% if current_user %>
        <%= link_to("Sign Out",destroy_user_session_path, class: 'btn btn-outline-danger', role: 'button') %>
      <% end %>
      <% if current_radmin %>
        <%= link_to("Sign Out Admin",destroy_radmin_session_path, class: 'btn btn-outline-danger', role: 'button') %>
        <%= link_to("Admin Stuff",admin_index_path, class: 'btn btn-outline-success', role: 'button') %>
      <% end %>
    <% else %>
      <%= link_to("Sign In",new_user_session_path, class: 'btn btn-outline-light', role: 'button') %>
      <%= link_to("Sign Up",new_user_registration_path, class: 'btn btn-outline-light', role: 'button') %>
    <% end %>
  </div>
</div>
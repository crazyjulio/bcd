= paginate orders if paginate_it == true
%table.admin_table
  %tr
    %th Date
    %th Transaction ID/Request ID
    %th User
    %th Status
    %th
  - orders.each do |order|
    = form_for order, :url => {:action => :update_order_shipping_status} do |f|
      = hidden_field_tag(:order_id,order.id)
      %tr
        %td= order.created_at.strftime("%m/%d/%Y")
        %td
          = link_to order.transaction_id, {:controller => :admin, :action => :order, :id => order.id}
          %br
          =order.request_id
        %td= order.user.email
        %td= select_tag(:shipping_status, options_for_select(shipping_statuses,order.shipping_status))
        %td= f.submit "Update Order"
= paginate orders if paginate_it == true
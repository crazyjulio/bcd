- if @category.name && !@category.image
  =h1(@category.name.capitalize)
- else
  %div#category_banner
    = image_tag(@category.image.url) if @category.image && @category.image.url
%br
%p
  = @category.description
%br
- if @products.blank?
  %br
  %br
  .centered_text
    = "Sorry, there are currently no #{@category.name.capitalize} products for sale."
= paginate @products
.centered_products_table
  %table.products_table
    - until @products.length == 0
      - products = @products.pop(4).reverse!
      %tr
        - products.each do |product|
          %td
            = render 'product_teaser', :product => product
= paginate @products
<%= h1("Checkout") %>
<br/>
<br/>
<% if @user.guest? %>
  <b>
    Guest email:
  </b>
  <br/>
  <%= @user.email %>
  <%= link_to 'edit', :controller => :sessions, :action => :guest_registration %>
  <br/>
  <br/>
<% end %>
<% if @cart.has_physical_item? %>
  <b>
    Address:
    <br/>
  </b>
  <% if @submission_method == 'paypal' %>
    You chose for us to get your address from Paypal
  <% else %>
    <%= "#{@order.first_name} #{@order.last_name}" %>
    <br/>
    <%= @order.address_street_1 %>
    <br/>
    <% if @order.address_street_2? %>
      <%= @order.address_street_2 %>
      <br/>
    <% end %>
    <%= "#{@order.address_city}, #{@order.address_state} #{@order.address_zip}" %>
  <% end %>
  <%= link_to 'edit', :controller => :store, :action => :enter_address %>
  <br/>
  <br/>
<% end %>
<br/>
<p>
  <table class="cart_table">
    <tr>
      <th colspan="2">Model</th>
      <th>Type</th>
      <th>Price</th>
      <th>Quantity</th>
    </tr>
    <% @cart.cart_items.each do |item| %>
      <tr>
        <% image = item.product.images[0] %>
          <% image_url = image.url.thumb if !image.blank? %>
            <td class="left_most_cell"><%= image_tag(image_url.url) if !image_url.blank? %></td>
            <td>
              <%= "#{item.product.product_code} #{item.product.name}" %>
              <td>
                <%= item.product.product_type.name %>
                <td>
                  <%= number_to_currency(item.price) %>
                  <td>
                    class="right_most_cell"><%= item.quantity %></td>
                </tr>
              <% end %>

              <tr>
                <td class="spacer_row" colspan="6"></td>
              </tr>
              <tr>
                <td class="no_border" colspan="3"></td>
                <td class="left_subtotal_cell" colspan="1">
                  <b>Items:</b>
                  <br/>
                  <br/>
                  <b>Subtotal:</b>
                </td>
                <td class="right_subtotal_cell">
                  <%= @cart.total_quantity %>
                  <br/>
                  <br/>
                  <%= number_to_currency @cart.total_price %>
                </td>
              </table>
            </p>
            <br/>
            <div class="float_right">
              <br/>
              Total:
              <%= number_to_currency @cart.total_price %>
              <br/>
              <%= button_to "Submit Order!", {:action => :submit_order,:order => {:user_id => @user.id}}, {:style => 'cursor:pointer', data: {disable_with: 'Submitting...'}} %>
              <br/>
              <div class="paypal_icons">
                <%= image_tag('icons/paypal_icons.gif') %>
              </div>
            </div>
<% content_for :head do %>
  <script>
    $(document).ready(function () {
      $('#homepage_slideshow').cycle({timeout: 12000, pause: 1, prev: '#prev', next: '#next'});
    });
  </script>
<% end %>
<%= h1("Welcome to Brick City Depot") %>
<br/>
<p>At Brick City Depot, we focus on making affordable, high quality instructions to help you expand your Lego&reg; collection and building skills.</p>
<br/>
<div class="main_item_div" id="homepage_slideshow">
  <% @updates.each do |item| %>
    <div class="main_item">
      <%= link_to image_tag(item.image), item.link, :class => 'image_link' if item.image? %>
    </div>
  <% end %>
</div>
<div class="clear"></div>
<div class="prev_next_centered">
  &nbsp;<a id='prev' href="#">Prev</a>&nbsp; | &nbsp;<a id='next' href="#">Next</a>
</div>
<br/>
<div class="featured_item float_right">
  <% product = featured_item %>
    <div class="news_item_header drop_shadow">
      <h3>Featured Product</h3>
    </div>
    <div class="news_item drop_shadow">
      <% unless product.nil? %>
        <div class="news_item_image">
          <%= link_to(image_tag(product.main_image.medium), {:controller => :store, :action => :product_details, :product_code => product.product_code, :product_name => product.name.to_snake_case}, :class => 'image_link') unless product.main_image.blank? %>
        </div>
        <br/>
        <b>
          <%= "#{product.product_code} #{product.name}" %>
        </b>
        <br/>
        <%= snippet(product.description) %>
        <%= link_to "More", {:controller => :store, :action => :product_details, :product_code => product.product_code, :product_name => product.name.to_snake_case} %>
      <% end %>
    </div>
  </div>
  <div class="under_construction float_left">
    <div class="news_item_header drop_shadow">
      <h3>On store shelves now!</h3>
    </div>
    <div class="news_item drop_shadow">
      <div class="centered_text">
        <%= link_to(image_tag('lego_neighborhood_book.png'), "/books") %>
      </div>
      <br/>
      Check it out, our first book! The book is published by No Starch Press and is available all over the internet, and also in Barnes & Noble stores. We'll teach you our process for creating our modulars, and give you the instructions on how to make the
      corner building on the front to boot. Order now on
      <a href="http://amzn.to/1qlDH26" target='_blank'>Amazon</a>,
      <a href="http://www.nostarch.com/legoneighborhood/" target='_blank'>No Starch</a>
      or
      <a href="http://www.barnesandnoble.com/w/the-lego-neighborhood-book-brian-lyles/1119972426" target='_blank'>Barnes & Noble</a>.
      <a href="/books">Learn More.</a>
      After you've bought the book, you can find the companion files #{link_to 'here', books_path}.
    </div>
  </div>
  <div class="clear"></div>
  <br/>
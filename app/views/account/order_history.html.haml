=h1("My Order History")
%br
=link_to "< My Account", account_path
%br
%br
.user_order_history
  - @orders.each do |order|
    %table
      %tr
        %td
          %b Order Date:
        %td
        %td
          = order.created_at.to_s(:date_time12)
      %tr
        %td
          %b Confirmation ID:
        %td
        %td
          = order.request_id
      %tr
        %td
          %b Transaction ID:
        %td.td_spacer
        %td
          = order.transaction_id
      %tr
        %td
          %b Status:
        %td
        %td
          - if order.status && order.status.upcase == "COMPLETED"
            %b.happy= order.status
          - else
            %b.sad= order.status
            = render :partial => 'shared/help', :locals => {:title => 'Why is my order messed up?', :content => "We're not sure, but we want to fix it. Please email us at service@brickcitydepot.com and tell us your Confirmation ID, Transaction ID (if available), Paypal email address and Order Date and we'll figure it out and make sure you get the instructions you paid for.", :type => 'info'}
      %tr
        %td
          = link_to "Order Details", {:controller => :account, :action => :order, :request_id => order.request_id}
    %br

= form_for(email_campaign, :html => {:multipart => true}) do |f|
  .field
    = f.label :description, 'Short description of the email. Ex. Email about new book'
    %br
    = f.text_area :description, cols: 40, rows: 5, placeholder: 'Brief description...', autofocus: true
  .field
    = f.label :subject, 'Email Subject Line'
    %br
    = f.text_field :subject, placeholder: 'Check out the new book...'
  .field
    = f.label :message
    %br
    = f.text_area :message, cols: 40, rows: 10, placeholder: 'Your message...'
  .field
    = f.label :redirect_link
    %br
    = f.text_field :redirect_link, placeholder: '/CB002/colonial_revival_house', size: 40
  - if email_campaign.image?
    .field
      = f.label :delete_image
      = f.check_box :remove_image
  -else
    .field
      = f.label :image
      %br
      = f.file_field :image
      =f.hidden_field :image_cache
  .actions
    = f.submit 'Save'

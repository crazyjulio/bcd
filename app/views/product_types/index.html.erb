<h1>Listing Product Types</h1>
<br/>
<br/>
<table class="admin_table">
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th>Ready for public?</th>
    <th>Digital?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @product_types.each do |product_type| %>
    <tr>
      <td>
        <%= product_type.name %>
      </td>
      <td>
        <%= product_type.image %>
      </td>
      <% if product_type.ready_for_public %>
        <td class="happy">
          <%= product_type.ready_for_public %>
        </td>
      <% else %>
        <td class="sad">
          <%= product_type.ready_for_public %>
        </td>
      <% end %>
      <td>
        <%= product_type.digital_product %>
      </td>
      <td>
        <%= link_to 'Show', product_type %>
      </td>
      <td>
        <%= link_to 'Edit', edit_product_type_path(product_type) %>
      </td>
      <td>
        <%= link_to 'Destroy', product_type, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
<br/>
<%= link_to 'New Product type', new_product_type_path %>
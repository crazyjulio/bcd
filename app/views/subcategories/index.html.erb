<h1>Listing subcategories</h1>
<br/>
<table class="admin_table">
  <tr>
    <th>Category</th>
    <th>Subcategory</th>
    <th>Code</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @subcategories.each do |subcategory| %>
    <tr>
      <td>
        <%= subcategory.category.name %>
      </td>
      <td>
        <%= subcategory.name %>
      </td>
      <td>
        <%= subcategory.code %>
      </td>
      <td>
        <%= snippet(subcategory.description, :word_count => 10) if subcategory.description %>
      </td>
      <td>
        <%= link_to 'Show', subcategory %>
      </td>
      <td>
        <%= link_to 'Edit', edit_subcategory_path(subcategory) %>
      </td>
      <td>
        <%= link_to 'Destroy', subcategory, data: {confirm: 'Are you sure?'}, :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>
<br/>
<%= link_to 'New Subcategory', new_subcategory_path %>
= form_for subcategory do |f|
  .field
    = f.label :category_id
    %br
    = f.select :category_id, categories
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :code
    %br
    = f.text_field :code
    .field
    = f.label :description
    %br
    = f.text_area :description
  .actions
    = f.submit 'Save'

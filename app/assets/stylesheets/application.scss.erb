/* Mixins! */
@mixin opacity($opacity){
  opacity: $opacity;
  filter: alpha(opacity=$opacity*100);
}

@mixin lego_head{
  background-image: url(<%= asset_path 'happy_head.png' %>);
  background-repeat: no-repeat;
  background-position: left center;
}

@mixin rounded-corners($radius){
    border-radius: $radius;
    -moz-border-radius: $radius;
    -webkit-border-radius: $radius;
}

@mixin left-rounded-corners($radius){
    border-radius: $radius 0 0 $radius;
    -moz-border-radius: $radius 0 0 $radius;
    -webkit-border-radius: $radius 0 0 $radius;
    border-left: 2px solid $primary_color2;
    border-top: 2px solid $primary_color2;
    border-bottom: 2px solid $primary_color2;
}

@mixin centered{
  margin-left: auto;
  margin-right: auto;
}

@mixin three-rounded-corners($radius){
    border-radius: $radius 0 $radius $radius;
    -moz-border-radius: $radius 0 $radius $radius;
    -webkit-border-radius: $radius 0 $radius $radius;
    border: 2px solid $primary_color2;
}

@mixin rounded-corners-on-top($radius){
    border-radius: $radius $radius 0 0;
    -moz-border-radius: $radius $radius 0 0;
    -webkit-border-radius: $radius $radius 0 0;
    border-right:2px solid $primary_color2;
    border-left:2px solid $primary_color2;
    border-top:2px solid $primary_color2;
}

@mixin rounded-corners-on-bottom($radius){
    border-radius: 0 0 $radius $radius;
    -moz-border-radius: 0 0 $radius $radius;
    -webkit-border-radius: 0 0 $radius $radius;
    border-bottom:2px solid $primary_color1;
    border-left:2px solid $primary_color1;
    border-right:2px solid $primary_color1;
}

@mixin gradient($color1,$color2){
  background-repeat: no-repeat;
  background-image: -moz-linear-gradient(top, $color1, $color2);
  background-image: -ms-linear-gradient(top, $color1, $color2);
  background-image: -o-linear-gradient(top, $color1, $color2);
  background-image: -webkit-gradient(linear, left top, left bottom, from($color1), to($color2));
  background-image: -webkit-linear-gradient(top, $color1, $color2);
  background-image: linear-gradient(top, $color1, $color2);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#{$color1}',endColorstr='#{$color2}',GradientType=0);
}

@mixin drop_shadow{
    -moz-box-shadow: 3px 3px 2px #999;
    -webkit-box-shadow: 3px 3px 2px #999;
    box-shadow: 3px 3px 2px #999;
}

@mixin border_width_and_color($border_width, $border_color){
    border:$border_width solid $border_color;
}

@mixin nice_button($height,$width,$font-size){
  height: #{$height}px;
  font-size: #{$font-size}px;
  width: #{$width}px;
  font-weight: bold;
  color: #58585a;
  @include rounded-corners(5px);
  @include border_width_and_color(1px, #CCC);
  cursor: pointer;
  &:hover{
    background-color: lighten(#CCCCCC,10%);
  }
}

